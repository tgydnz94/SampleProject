@model LoginDTO

<div class="content-wrapper d-flex align-items-center auth">
    <div class="row flex-grow">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                    <img src="../../assets/images/logo.svg">
                </div>
                <h4>Hello! let's get started</h4>
                <h6 class="font-weight-light">Sign in to continue.</h6>
                <form asp-action="Login" method="post" class="pt-3">
                    <div class="form-group">
                        <input asp-for="Mail"
                               type="email" class="form-control form-control-lg" placeholder="E-Mail">
                    </div>
                    <div class="form-group">
                        <input asp-for="Password"
                               type="password" class="form-control form-control-lg" placeholder="Şifre">
                    </div>
                    <div class="mt-3">
                        @* <a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="../../Member/AppUser/Index"> Giriş Yap </a>*@

                        <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"> GİRİŞ YAP</button>

                    </div>
                    <div class="my-2 d-flex justify-content-between align-items-center">

                        <a href="#" class="auth-link text-black"> Şifremi unuttum. </a>
                    </div>
                    <div class="mb-2">
                        <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                            <i class="mdi mdi-facebook mr-2"></i> Facebook ile giriş yap
                        </button>
                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        Don't have an account? <a class="text-primary" asp-area="" asp-controller="User" asp-action="Create"> Kayıt Ol </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

