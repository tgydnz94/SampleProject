@model List<GetArticleWithUserVM>


@foreach (var item in Model)
{

    <div class="card m-2" style="max-width: 530px;float:left;">
        <div class="row">
            <div class="col-md-4">
                <img src="@item.Image" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text"> @item.Content.Substring(0,100)</p>
                    <p class="card-text"><small class="text-muted">Oluşma Tarihi : @item.CreatedDate.ToShortDateString()</small></p>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Detail" asp-controller="Article" asp-area="Member" asp-route-id="@item.ArticleID">devamını okumak için tıklaynız..</a>
                    }
                    else
                    {
                        <a asp-action="Detail" asp-controller="Article" asp-area="" asp-route-id="@item.ArticleID">devamını okumak için tıklaynız..</a>
                    }


                </div>
                <div class="card-footer">
                    <div class="text-right">
                        <a asp-action="Detail" asp-controller="" asp-route-id="@item.AppUserID">
                            Makale Yazarı :  @item.UserFullName
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>




}
